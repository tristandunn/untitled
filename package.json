{
  "name": "untitled",
  "private": true,
  "type": "module",
  "scripts": {
    "fix:css": "prettier --write app/assets/tailwind/**/*.css",
    "fix:erb": "herb-format",
    "lint": "eslint app/javascript spec/javascripts",
    "lint:css": "stylelint app/assets/tailwind/**/*.css",
    "lint:erb": "herb-lint --format detailed --no-timing",
    "outdated": "yarn upgrade-interactive",
    "test": "bin/mocha spec/javascripts",
    "test:coverage": "c8 --100 --clean --report-dir tmp/ --reporter text-summary --skip-full bin/mocha spec/javascripts"
  },
  "engines": {
    "node": "24.12.0"
  },
  "packageManager": "yarn@4.12.0",
  "devDependencies": {
    "@herb-tools/formatter": "0.8.9",
    "@herb-tools/linter": "0.8.9",
    "@hotwired/stimulus": "3.2.2",
    "@stylistic/eslint-plugin": "5.7.1",
    "c8": "10.1.3",
    "chai": "6.2.2",
    "eslint": "9.39.2",
    "jsdom": "28.0.0",
    "mocha": "11.7.5",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "sinon": "21.0.1",
    "sinon-chai": "4.0.1",
    "stylelint": "17.1.0",
    "stylelint-config-standard": "40.0.0"
  }
}
